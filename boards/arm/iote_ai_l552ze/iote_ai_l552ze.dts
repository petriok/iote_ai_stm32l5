 /dts-v1/;
 #include "iote_ai_l552ze-common.dtsi"
 
 / {
     model = "IOTE.AI L552ZE board";
     compatible = "iote_ai,iote-ai-l552ze";

     #address-cells = <1>;
     #size-cells = <1>;
 
     chosen {
         zephyr,console = &usart3;
         zephyr,shell-uart = &usart3;
         zephyr,sram = &sram0;
         zephyr,flash = &flash0;
     };
 
     aliases {
        led0 = &green_led_1;
        led1 = &blue_led_1;
        led2 = &red_led_1;
        sw0 = &user_button;
     };
 };
 
 &cpu0 {
	cpu-power-states = <&stop0 &stop1 &stop2>;
};

 &usart3 {
     hw-flow-control = true;
     pinctrl-0 = <&usart3_tx_pd8
                  &usart3_rx_pd9
                  &usart3_rts_pd12
                  &usart3_cts_pb13>;
 };
 
 &lptim1 {
	status = "okay";
};