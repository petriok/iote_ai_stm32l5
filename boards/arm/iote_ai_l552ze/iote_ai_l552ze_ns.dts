 /dts-v1/;
 #include "iote_ai_l552ze-common.dtsi"
 
 / {
     model = "IOTE.AI L552ZE board";
     compatible = "iote_ai,iote-ai-l552ze";
 
     #address-cells = <1>;
     #size-cells = <1>;
 
     chosen {
         zephyr,console = &usart3;
         zephyr,shell-uart = &usart3;
         zephyr,sram = &sram0;
         zephyr,flash = &flash0;
     };
 
     aliases {
        led0 = &green_led_1;
        led1 = &blue_led_1;
        led2 = &red_led_1;
        sw0 = &user_button;
     };
 };
 
 &cpu0 {
	cpu-power-states = <&stop0 &stop1 &stop2>;
};
 
&lptim1 {
	status = "okay";
};

&usart1 {
    hw-flow-control;
    pinctrl-0 = <&usart1_tx_pg9
                 &usart1_rx_pg10
                 &usart1_rts_pg12
                 &usart1_cts_pg11>;
    current-speed = <115200>;
    status = "okay";
};

&usart2 {
    hw-flow-control;
    pinctrl-0 = <&usart2_tx_pa2
                 &usart2_rx_pa3
                 &usart2_rts_pa1
                 &usart2_cts_pa0>;
    current-speed = <115200>;
    status = "okay";
};

&usb {
	status = "okay";
	pinctrl-0 = <&usb_dm_pa11 &usb_dp_pa12>;
};

&can1 {
	pinctrl-0 = <&can1_rx_pd0 &can1_tx_pd1>;
	bus-speed = <125000>;
	sjw = <1>;
	prop-seg = <0>;
	phase-seg1 = <6>;
	phase-seg2 = <5>;
	status = "disabled";
};

&spi1 {
	pinctrl-0 = <&spi1_sck_pg2 &spi1_miso_pg3 &spi1_mosi_pg4>;
	status = "okay";
	cs-gpios = <&gpiog 5 GPIO_ACTIVE_LOW>;
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pg14 &i2c1_sda_pg13>;
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	mpu6050@68 {
		compatible = "invensense,mpu6050";
		reg = <0x68>;
		status = "okay";
		label = "MPU6050";
		int-gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>;
/*		irq-gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>; */
	};
};

&rtc {
	status = "okay";
};
